<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.udacity.amit.constraintlayouts.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="220dp"
        android:layout_height="28dp"
        android:background="@android:color/holo_blue_bright"
        android:text="TextView"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="203dp"
        tools:layout_editor_absoluteY="16dp"
        tools:text="Top View" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="129dp"
        android:layout_height="34dp"
        android:background="@android:color/holo_blue_bright"
        android:text="TextView"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="131dp"
        tools:text="Left Side View" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="118dp"
        android:layout_height="37dp"
        android:background="@android:color/holo_blue_bright"
        android:text="TextView"
        tools:layout_editor_absoluteX="448dp"
        tools:layout_editor_absoluteY="131dp"
        tools:text="Right Side View" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rotate Views ClockWise"
        tools:layout_editor_absoluteX="205dp"
        tools:layout_editor_absoluteY="119dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="212dp"
        android:layout_height="33dp"
        android:background="@android:color/holo_blue_bright"
        android:text="Bottom View"
        tools:layout_editor_absoluteX="205dp"
        tools:layout_editor_absoluteY="227dp" />

</android.support.constraint.ConstraintLayout>
